   "source": [
    "#include <stdio.h>\n",
    "\n",
    "struct data {\n",
    "    double S;\n",
    "    int N;\n",
    "    double J;\n",
    "};\n",
    "\n",
    "double proximaParcela(struct data parametro) {\n",
    "    if (parametro.N == 1) {\n",
    "        return parametro.S;\n",
    "    }\n",
    "    else {\n",
    "        parametro.N--;\n",
    "        return proximaParcela(parametro) * (1 + parametro.J/100);\n",
    "    }\n",
    "}\n",
    "\n",
    "int main () {\n",
    "    struct data parametro;\n",
    "    parametro.S = 200;\n",
    "    parametro.J = 1;\n",
    "    for (int i = 1; i <= 5; i++){\n",
    "        parametro.N = i;\n",
    "        printf(\"%.2f \", proximaParcela(parametro));\n",
    "    }\n",
    "    return 0;\n",
    "}"
